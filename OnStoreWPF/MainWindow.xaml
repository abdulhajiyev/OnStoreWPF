        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ListBox
                Name="scroll"
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding ItemUCs, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                MouseDoubleClick="ScrollViewer_MouseDoubleClick"
                ScrollViewer.CanContentScroll="False"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <Border
                Name="EditPanel"
                Grid.Column="1"
                Width="300"
                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="110*" />
                        <RowDefinition Height="55*" />
                        <RowDefinition Height="55*" />
                        <RowDefinition Height="55*" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Image
                            Name="ItmImage"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="{Binding SelectedItem.Item.Image, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>
                    <Border
                        Grid.Row="1"
                        Margin="3"
                        Background="Transparent"
                        BorderThickness="5"
                        CornerRadius="5">
                        <TextBox
                            VerticalContentAlignment="Center"
                            fw:Extensions.PlaceholderText="Name"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            FontFamily="Segoe UI Semibold"
                            MaxLength="20"
                            Style="{StaticResource TextBoxRevealStyle}"
                            Text="{Binding SelectedItem.Item.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextChanged="TextBoxBase_OnTextChanged" />
                    </Border>

                    <Border
                        Grid.Row="2"
                        Margin="3"
                        Background="Transparent"
                        BorderThickness="5"
                        CornerRadius="5">
                        <TextBox
                            VerticalContentAlignment="Center"
                            fw:Extensions.PlaceholderText="Price"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            FontFamily="Segoe UI Semibold"
                            MaxLength="20"
                            Style="{StaticResource TextBoxRevealStyle}"
                            Text="{Binding SelectedItem.Item.Price, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextChanged="TextBoxBase_OnTextChanged" />
                    </Border>

                    <Border
                        Grid.Row="3"
                        Margin="3"
                        Background="Transparent"
                        BorderThickness="5"
                        CornerRadius="5">
                        <TextBox
                            VerticalContentAlignment="Center"
                            fw:Extensions.PlaceholderText="Quantity"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            FontFamily="Segoe UI Semibold"
                            MaxLength="20"
                            Style="{StaticResource TextBoxRevealStyle}"
                            Text="{Binding SelectedItem.Item.Quantity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextChanged="TextBoxBase_OnTextChanged" />
                    </Border>
                </Grid>
            </Border>
        </Grid>

