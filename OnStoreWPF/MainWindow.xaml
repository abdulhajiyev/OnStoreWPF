            0 3000 0 3000 4285 0 4285 0 0 -3000z
        </Geometry>
    </Window.Resources>
    <Grid Background="#F0F0F0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <hc:AnimationPath
            Margin="3"
            Data="{DynamicResource Logo}"
            RenderTransformOrigin="0.5,0.5"
            Stroke="#FFBD2F"
            StrokeThickness="2"
            Duration="00:00:35">
            <hc:AnimationPath.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="180" />
                    <TranslateTransform />
                </TransformGroup>
            </hc:AnimationPath.RenderTransform>
        </hc:AnimationPath>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="85" />
            </Grid.ColumnDefinitions>
            <Border
                Margin="3"
                Background="#FFBD2F"
                BorderThickness="5"
                CornerRadius="5">
                <TextBox
                    Name="TextBoxSearch"
                    TextChanged="TextBoxBase_OnTextChanged"
                    VerticalContentAlignment="Center"
                    fw:Extensions.PlaceholderText="Search"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    FontFamily="Segoe UI Semibold"
                    MaxLength="20"
                    Style="{StaticResource TextBoxRevealStyle}" />
            </Border>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Ellipse}">
                        <Setter Property="Margin" Value="0,0,10,0" />
                    </Style>
                </StackPanel.Resources>
                <Ellipse
                    Name="min"
                    Width="20"
                    Height="20"
                    Fill="#FF27CA41"
                    MouseLeftButtonDown="ControlBox_Click"
                    Stroke="#FF2CAD2F" />
                <Ellipse
                    Name="max"
                    Width="20"
                    Height="20"
                    Fill="#FFC02E"
                    MouseLeftButtonDown="ControlBox_Click"
                    Stroke="#E4A42A" />
                <Ellipse
                    Name="close"
                    Width="20"
                    Height="20"
                    Fill="#FF6058"
                    MouseLeftButtonDown="Close_Click"
                    Stroke="#E75048" />
            </StackPanel>
        </Grid>
        <!--<ScrollViewer Grid.Row="1" Grid.Column="1">
            <ListView
                Background="Transparent"
                ItemsSource="{Binding ItemUCs, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ScrollViewer.CanContentScroll="False"
