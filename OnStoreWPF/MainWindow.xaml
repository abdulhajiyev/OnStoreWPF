    Width="900"
    Height="500"
    MinWidth="280"
    MinHeight="280"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="0"
    KeyDown="HandleEsc"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
